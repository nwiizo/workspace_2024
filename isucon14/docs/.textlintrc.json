{
	"rules": {
		"preset-ja-technical-writing": {
			"sentence-length": {
				"max": 200
			},
			"max-comma": {
				"max": 5
			},
			"ja-no-redundant-expression": false,
			"no-doubled-joshi": false,
			"no-doubled-conjunction": false,
			"no-exclamation-question-mark": false,
			"no-mix-dearu-desumasu": {
				"strict": true,
				"preferInHeader": "ですます",
				"preferInBody": "ですます",
				"preferInList": "ですます"
			}
		},
		"no-todo": true,
		"prh": {
			"rulePaths": ["prh-rule.yaml"]
		},
		"preset-jtf-style": {
			"1.1.3.箇条書き": false,
			"3.1.1.全角文字と半角文字の間": false
		}
	},
	"filters": {
		"allowlist": {
			"allow": ["負荷走行実行時", "AWS のインスタンス起動 API"]
		}
	}
}
